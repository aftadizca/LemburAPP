@using Microsoft.AspNetCore.Identity

@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LEMBUR</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-sandstone.css" />
        <link rel="stylesheet" href="~/css/awesome.css" />
        <link rel="stylesheet" href="~/css/datatables.css" />
        <link rel="stylesheet" href="~/css/jquery-ui.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-sandstone.css" />
        <link rel="stylesheet" href="~/css/awesome.css" />
        <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body class="bg-dark">

    @* Message Dialog Information *@
    <div class="modal" id="messageDialogInfo" data-easein="pulse" name="" data-backdrop="static" data-keyboard="false" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content alert alert-dismissible alert-success">
                <button type="button" class="close py-3" data-dismiss="modal"><i class="fas fa-times-circle"></i></button>
                <div class="row">
                    <div class="col-1 justify-content-center"><i class="fas fa-info-circle fa-2x"></i></div>
                    <div class="col py-1"><strong class="sandstone">Oh snap!</strong></div>
                </div>
            </div>
        </div>
    </div>

    @* Message Dialog Error *@
    <div class="modal" id="messageDialogError" data-easein="pulse" name="" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content alert alert-dismissible alert-danger">
                <button type="button" class="close py-3" data-dismiss="modal"><i class="fas fa-times-circle"></i></button>
                <div class="row">
                    <div class="col-1 justify-content-center"><i class="fas fa-exclamation-circle fa-2x"></i></div>
                    <div class="col py-1"><strong>Oh snap!</strong></div>
                </div>
            </div>
        </div>
    </div>

    @* Message dialog confirmation *@
    <div class="modal" id="confirmationDialog" confirm="" data-easein="bounceDownIn" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary-blue text-white">
                    <h5 class="modal-title sandstone">CONFIRMATION</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body sandstone">
                    Modal body text goes here.
                </div>
                <div class="modal-footer">
                    <button id="okButton" type="button" class="btn btn-primary">OK</button>
                    <button id="cancelButton" type="button" class="btn btn-secondary" data-dismiss="modal">CANCEL</button>
                </div>
            </div>
        </div>
    </div>

    @* Navbar *@
    <div class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand font-kenyan-rg">LEMBUR</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto nav-pills"></ul>

                <form asp-action="Logout" asp-controller="Account" method="post" id="FormLogout"></form>

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                            <button type="button" class="btn btn-primary"><i class="fas fa-user fa-lg"></i>&emsp;@UserManager.GetUserName(User)</button>
                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 34px, 0px); top: 0px; left: 0px; will-change: transform;">
                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#changePasswordDialog">Change Password</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="javascript:document.getElementById('FormLogout').submit()">Logout</a>
                                </div>
                            <button id="btnGroupDrop1" data-toggle="dropdown" type="button" class="btn btn-primary"><i class="fas fa-cog fa-lg"></i></button>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>


    @RenderBody() 

        <environment include="Development">
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
            <script src="~/js/jquery-ui.js"></script>
            <script src="~/js/datatables.js"></script>
            <script src="~/js/velocity.min.js"></script>
            <script src="~/js/velocity.ui.min.js"></script>
            <script src="~/js/js.cookie.js"></script>
            <script src="~/js/alertify.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
        </environment>
        <environment exclude="Development">
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
            <script src="~/js/jquery.dataTables.min.js"></script>
            <script src="~/js/dataTables.bootstrap4.min.js"></script>
            <script src="~/js/velocity.min.js"></script>
            <script src="~/js/velocity.ui.min.js"></script>
            <script src="~/js/js.cookie.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
        </environment>

        @RenderSection("Scripts", required: false)
</body>
</html>
