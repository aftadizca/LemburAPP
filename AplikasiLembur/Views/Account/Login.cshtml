@using Microsoft.AspNetCore.Identity
@model AplikasiLembur.ViewModels.LoginViewModel
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div id="wrapper">
    <div class="vertical-align-wrap py-0">
        <div class="vertical-align-middle py-0">
            <div class="auth-box">
                <div class="content">
                    <div class="header">
                        <div class="logo text-center"><img src="data:image/png;base64," alt="DiffDash"></div>
                        <p class="lead">Login to LEMBUR Dashboard</p>
                    </div>

                    <form asp-action="Index" asp-controller="Admin" class="form-auth-small" id="formLogin" method="post">

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user-circle fa-lg"></i></span>
                            <div class="form-group">
                                <label asp-for="Username" class="control-label sr-only"></label>
                                <select asp-for="Username" id="inputUsername" class="multiselect multiselect-custom">
                                    @foreach (var user in UserManager.Users.OrderBy(p => p.UserName))
                                    {
                                        <option value="@user.UserName">@user.UserName.ToUpper()</option>
                                    }
                                </select>
                            </div>
                        </div>


                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key text-white fa-lg"></i></span>
                            <div class="form-group">
                                <input asp-for="Password" class="form-control" placeholder="PASSWORD" id="inputPassword">
                            </div>
                        </div>
                        <span asp-validation-for="Password" id="fieldPass" class="text-danger"></span>

                        <button id="submitLogin" type="submit" data-name="login" class="btn btn-primary btn-lg btn-block">LOGIN</button>
                        <div class="bottom">
                            <span class="helper-text"><i class="fa fa-lock"></i> <a href="page-forgot-password.html">Forgot password?</a></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



